{
  "format_version" : "1.10.0",
  "animation_controllers" : {
    "controller.animation.{{PROJ_PREFIX}}_{{IDENTIFIER}}.wield": {
      "initial_state": "first_person",
      "states": {
        "first_person": {
          "animations": [ "wield" ],
          "transitions": [
            {
              "ironspear_blocking": "c.is_first_person && q.is_sneaking"
            }
          ]
        },
        "{{PROJ_PREFIX}}_{{IDENTIFIER}}_blocking": {
          "animations": [ "blocking" ],
          "transitions": [
            {
              "first_person": "c.is_first_person && !q.is_sneaking"
            }
          ]
        }
      }
    }
  }
}
