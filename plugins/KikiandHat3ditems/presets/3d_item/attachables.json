{
  "format_version": "1.10.0",
  "minecraft:attachable": {
    "description": {
      "identifier": "{{PROJ_PREFIX}}:{{IDENTIFIER}}",
      "materials": {
        "default": "entity_alphatest",
        "enchanted": "entity_alphatest_glint"
      },
      "textures": {
        "default": "textures/items/{{IDENTIFIER}}.entity",
        "enchanted": "textures/misc/enchanted_item_glint"
      },
      "geometry": {
        "default": "geometry.{{PROJ_PREFIX}}_{{IDENTIFIER}}"
      },
      "animations": {
        "wield_controller": "controller.animation.{{PROJ_PREFIX}}_{{IDENTIFIER}}.wield",
        "wield": "animation.{{PROJ_PREFIX}}_{{IDENTIFIER}}.first_person_wield",
        "blocking": "animation.{{PROJ_PREFIX}}_{{IDENTIFIER}}.first_person_blocking",
        "default": "animation.{{PROJ_PREFIX}}_{{IDENTIFIER}}.default",
        "is_using_item": "animation.{{PROJ_PREFIX}}_{{IDENTIFIER}}.is_using_item"
      },
      "scripts": {
        "animate": [
          { "wield_controller": "c.is_first_person && c.item_slot == 'main_hand' && c.item_slot != 'off_hand' && q.get_equipped_item_name == '{{IDENTIFIER}}'"},
          { "default": "!c.is_first_person && c.item_slot == 'main_hand' && c.item_slot != 'off_hand' && q.get_equipped_item_name == '{{IDENTIFIER}}' && !q.is_sneaking"},
          { "is_using_item": "!c.is_first_person && c.item_slot == 'main_hand' && c.item_slot != 'off_hand' && q.get_equipped_item_name == '{{IDENTIFIER}}' && q.is_sneaking"}
        ]
      },
      "render_controllers": [ "controller.render.item_default" ]
    }
  }
}
